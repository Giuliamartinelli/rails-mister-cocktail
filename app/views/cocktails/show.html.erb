<% if @cocktail.photo.attached? %>
  <div class="banner mb-1" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key, height: 200, width: 400, crop: :fill %>')">
<% else%>
<div class="banner mb-1" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://picsum.photos/200/400)">
<% end %>



  <div class="container">
    <h1><%= @cocktail.name %></h1>
    <%= link_to "new dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary"; %>
  </div>
</div>
<div class="container" style=" padding: 16px;">
  <div class="row" style="padding: 16px;">
    <% @cocktail.doses.each do |dose| %>
    <div class="col-4 my-3" style="width: 18rem;">
      <div class="card">
        <h3><%= dose.ingredient.name %></h3>
        <div class="description p-3 d-flex align-items-center justify-content-between ">
          <%= dose.description %>
          <%= link_to "Delete", dose_path(dose), method: :delete,data: { confirm: "Are you sure?" } %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

